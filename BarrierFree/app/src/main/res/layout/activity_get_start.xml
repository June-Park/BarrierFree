<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.jj.barrierfree.GetStartActivity">

    <TextView
        android:text="Barrier Free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/textView2"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:text="장벽 없는 세상을 위해"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="22dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/home_buildings"
            android:layout_above="@+id/getstart_loginButton"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2"
            android:layout_marginBottom="20dp"
            android:src="@drawable/home_buildings"
            android:adjustViewBounds="true"
            android:layout_weight="1" />

        <Button
            android:text="로그인"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/getstart_signupButton"
            android:layout_centerHorizontal="true"
            android:id="@+id/getstart_loginButton"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:background="@android:color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1" />

        <Button
            android:text="회원가입"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/getstart_signupButton"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="아이디/비밀번호 찾기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/getstart_findidpw"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:textAlignment="center" />

            <TextView
                android:text="게스트모드로 입장"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/getstart_guestmode"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
